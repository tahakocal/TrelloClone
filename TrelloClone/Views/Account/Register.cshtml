@model WebApplication12.Models.User
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<h2>Kayıt Ol</h2>


<div>
    @using (Html.BeginForm("SaveRegisterDetails", "Account"))
    {
        <div style="color:red;">@Html.ValidationSummary()</div>
        <div class="row">
            <div class="col-lg-12">@ViewBag.Message</div>
        </div><br />
        <form>
            <div class="form-group">
                <h4>İsim</h4>
                @Html.TextBoxFor(a => a.FirstName, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <h4>Soyisim</h4>
                @Html.TextBoxFor(a => a.LastName, new { @class = "form-control" })
            </div>


            <div class="form-group">
                <h4>Mail</h4>
                @Html.TextBoxFor(a => a.Mail, new { @class = "form-control" })

            </div>
            <div class="form-group">
                <h4>Şifre</h4>
                @Html.TextBoxFor(a => a.Password, new { @class = "form-control", type = "Password" })
            </div>
            <input type="submit" value="Kayıt Ol" class="btn btn-primary" />
        </form>

    }

</div>