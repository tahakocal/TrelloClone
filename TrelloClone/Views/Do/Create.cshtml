@model  WebApplication12.Models.ToDo
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("Create","Do",FormMethod.Post, new {enctype="multipart/form-data"}))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">

        @Html.ValidationSummary(true)

        <div class="form-group">
        <h5 class="control-label col-md-2">Başlık</h5>
            <div class="col-md-5">
                @Html.EditorFor(todo => todo.Title)
                @Html.ValidationMessageFor(todo => todo.Title)
            </div>
        </div>

        <div class="form-group">
            <h5 class="control-label col-md-2">Açıklama</h5>
            <div class="col-md-5">
                @Html.EditorFor(todo => todo.Description)
                @Html.ValidationMessageFor(todo => todo.Description)
            </div>
        </div>
        
        <div class="form-group">
            <h5 class="control-label col-md-2">Resim</h5>
            <div class="col-md-5">
               <input type="file" name="Resim"/>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Kaydet" class="btn btn-success" id="btnsave" />
            </div>
        </div>
    </div>

    <script>
        $('#btnsave').click(function () {
            ({
                title: "Wow!",
                text: "Message!",
                type: "success"
            }),
            function() {
                window.location.href = '/Do/Index';
            }
        });
    </script>

}
